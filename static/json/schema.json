{
    "title": "Level Settings",
    "type": "object",
    "properties": {
        "mode": {
            "title": "Game Mode",
            "oneOf": [
                {
                    "title": "Color Match",
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": ["colormatch"]
                        },
                        "goal": {
                            "type": "object",
                            "title": "Goal",
                            "format": "grid",
                            "properties": {
                                "color": {
                                    "title": "Goal Color",
                                    "type": "string",
                                    "enum": ["red", "green", "yellow", "white", "purple", "blue"]
                                },
                                "number": {
                                    "title": "Number",
                                    "description": "How many to shoot to win",
                                    "type": "integer"
                                }
                            }
                        },
                        "colors": {
                            "type": "array",
                            "title": "Allowed Colors",
                            "format": "table",
                            "items": {
                                "type": "string",
                                "enum": ["red", "green", "yellow", "white", "purple", "blue"]
                            }
                        }
                    }
                }
            ]
        },
        "emitter": {
            "title": "Emitter Settings",
            "type": "object",
            "properties": {
                "generator": {
                    "title": "Generator",
                    "type": "object",
                    "properties": {
                        "circle": {"type": "integer", "title": "Circle Rate", "default": 0},
                        "rombus": {"type": "integer", "title": "Rombus Rate", "default": 0},
                        "triangle": {"type": "integer", "title": "Triangle Rate", "default": 0}
                    }
                },
                "limit": {
                    "title": "Generation Limit",
                    "type": "integer",
                    "minimum": 0
                }
            }
        }
    }
}
